{
  "compilerOptions": {
      "target": "ES2022",
      "module": "commonjs",
      "sourceMap": false,
      "outDir": "./dist",
      "moduleResolution": "node",
      "removeComments": true,
      "esModuleInterop": true,
      "allowJs": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "exclude": ["node_modules", "dist"],
    "include": ["./src"]
}